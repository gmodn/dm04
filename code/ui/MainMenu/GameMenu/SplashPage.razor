@using Sandbox.UI
@inherits Panel

<style>
	SplashPage
	{
		position: absolute;
		width: 200%;
		height: 175%;
		transform: translateX(-4%) translateY(-25%);
		z-index: 99;
	}
</style>

<root>
	<VideoPanel Source="ui\MainMenu\GameMenu\SplashContent\intro.mp4"></VideoPanel>
</root>

@code
{
	TimeSince TimeSinceCreated { get; set; } = 0;

	public override void Tick()
	{
		if ( !IsVisible ) return;

		if ( TimeSinceCreated > 13f )
			Delete(true);
	}
}